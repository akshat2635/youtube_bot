{
  "manifest_version": 3,
  "name": "YouTube Chatbot Assistant",
  "version": "1.0",
  "description": "Ask questions about YouTube videos using AI",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
